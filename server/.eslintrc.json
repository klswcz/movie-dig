{
    "env": {
      "node": true,
      "es2021": true,
      "mocha": true
    },
    "extends": [
		"eslint:recommended",
		"plugin:node/recommended",
		"prettier"
	],
    "plugins": [
		"node",
		"prettier"
	],
    "rules": {
      // "node/no-unpublished-require": "warn",
      "node/no-unpublished-require": ["error", {
        "allowModules": ["chai", "morgan"]
    }],
      "prefer-const": "error",
      "prefer-arrow-callback": "error",
      "no-var": "error",
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "trailingComma": "none",
          "printWidth": 120,
          "tabWidth": 4
        }
      ],
        "no-console": 2
    }
  }