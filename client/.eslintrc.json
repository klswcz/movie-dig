{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "react/prop-types": "warn",
        "prefer-const": "error",
        "no-var": "error",
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": [
            "error",
            {
                "semi": false,
                "trailingComma": "none",
                "printWidth": 120,
                "tabWidth": 4
            }
        ],
        "no-console": 2
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}